<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:id="@+id/idjuego">

    <ImageView
        android:id="@+id/imagenVideojuego"
        android:layout_width="98dp"
        android:layout_height="107dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="160dp"
        android:layout_height="33dp"
        android:layout_margin="@dimen/text_margin"
        android:text="titulo"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imagenVideojuego"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="58dp"
        android:layout_height="39dp"
        android:layout_margin="@dimen/text_margin"
        android:text="precio"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imagenVideojuego"
        app:layout_constraintTop_toBottomOf="@+id/nombre" />

    <Button
        android:id="@+id/ir_detalle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_buttom"
        android:drawableRight="@drawable/ic_ir"
        android:text="Ir"
        app:layout_constraintStart_toEndOf="@+id/nombre"
        app:layout_constraintTop_toTopOf="@+id/nombre" />

</androidx.constraintlayout.widget.ConstraintLayout>