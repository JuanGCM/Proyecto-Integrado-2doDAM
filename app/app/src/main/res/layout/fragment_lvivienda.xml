<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titulov"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/preciov"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_margin="@dimen/text_margin"
        android:text="precio"
        app:layout_constraintStart_toEndOf="@+id/provinciav"
        app:layout_constraintTop_toBottomOf="@+id/localidadv" />

    <TextView
        android:id="@+id/provinciav"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="64dp"
        android:layout_weight="1"
        android:text="provincia"
        app:layout_constraintEnd_toEndOf="@+id/localidadv"
        app:layout_constraintTop_toBottomOf="@+id/localidadv" />

    <TextView
        android:id="@+id/localidadv"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginStart="80dp"
        android:layout_weight="1"
        android:text="localidad"
        app:layout_constraintStart_toEndOf="@+id/titulov"
        app:layout_constraintTop_toTopOf="@+id/titulov" />

    <TextView
        android:id="@+id/categoria"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:text="categoria"
        app:layout_constraintEnd_toEndOf="@+id/titulov"
        app:layout_constraintTop_toBottomOf="@+id/titulov" />
</androidx.constraintlayout.widget.ConstraintLayout>