<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.triana.virtual_gaming">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirtualGaming"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.Splash.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/megusta_button" />

        <activity
            android:name=".ui.comparaPc.ComparaActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.editaOrdenador.EditaOrdenadorActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.OrdenadorDetalle.OrdenadorDetalleActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.EditPerfil.EditPerfilActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.miPerfil.MiPerfilActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.ordenador.OrdenadorActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.videojuegoDetalles.VideojuegoDetailsActivity"
            android:noHistory="true" />
        <activity
            android:name=".ui.registro.RegisterActivity"
            android:label="@string/title_activity_register"
            android:noHistory="true" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:noHistory="true" />
    </application>

</manifest>